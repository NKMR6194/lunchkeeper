= render "partials/shopheadbar"
%h1 Listing Shops
%table
  %thead
    %tr
      %th Email
      %th Password digest
      %th Name
      %th Phone
      %th Address
      %th Pref
      %th City
      %th Rang
      %th Capability
      %th Open at
      %th Close at
      %th Position x
      %th Position y
      %th{:colspan => "3"}
  %tbody
    - @shops.each do |shop|
      %tr
        %td= shop.email
        %td= shop.password_digest
        %td= shop.name
        %td= shop.phone
        %td= shop.address
        %td= shop.pref
        %td= shop.city
        %td= shop.rang
        %td= shop.capability
        %td= shop.open_at
        %td= shop.close_at
        %td= shop.position_x
        %td= shop.position_y
        %td= link_to 'Show', shop
        %td= link_to 'Edit', edit_shop_path(shop)
        %td= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Shop', new_shop_path
